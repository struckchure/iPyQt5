/* Generic Card Configurations */

* {
    border-radius: 5px;
}

/* Generic Card Configurations */
******************
/* Card Basic */

Card{
    min-width: 0;
    background-color: $background-color;
    background-clip: border-box;
    border-width: $border-width;
    border-style: $border-style;
    border-color: $border-color;
    border-radius: $border-radius;
    padding: 0;
}

/* Card Basic */
******************
/* Card Header */

CardHeader{
    padding: 0.75rem 1.25rem;
    margin-bottom: 0;
    background-color: $background-color;
    border-bottom: 1px solid white;
}

CardHeader > QLabel {
    color: white;
}

/* Card Header */
******************
/* Card Body */

CardBody{
    min-height: 50px;
}

/* Card Body */
******************
/* Card Footer */

CardFooter{
    padding: 0.75rem 1.25rem;
    margin-bottom: 0;
    background-color: $background-color;
    border-top: 1px solid white;
}

CardFooter > QLabel {
    color: white;
}

/* Card Footer */
******************
